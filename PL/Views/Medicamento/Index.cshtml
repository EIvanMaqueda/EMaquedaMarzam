@model ML.Medicamento
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/card.css" asp-append-version="true" />
<h2>Medicamentos</h2>

<div class="container">
    <div class="row">
    </div>
    <br />
    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar", "Form", "Medicamento", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    <br />
    <div class="row">
        @if (Model.Medicamentos != null)
        {
            foreach (ML.Medicamento medicamento in Model.Medicamentos)
            {
           <div class="col-md-3">
               <div class="wsk-cp-product">
                   <div class="wsk-cp-img"><img src="data:image/*;base64,@medicamento.Imagen" alt="Product" class="img-responsive" /></div>
                   <div class="wsk-cp-text">
                       <div class="category">
                           <span><a href="@Url.Action("Form", "Medicamento", new { IdMedicamento = medicamento.IdMedicamento })">Actualizar</a></span>
                           
                       </div>
                       <div class="title-product">
                           <h3>@medicamento.Nombre</h3>
                       </div>
                       <div class="description-prod">
                           <p>@medicamento.Descripcion</p>
                       </div>
                       <div class="card-footer">
                           <div class="wcf-left"><span class="price">$@medicamento.Precio</span></div>
                           <div class="wcf-right"><a href="@Url.Action("Delete", "Medicamento", new { IdMedicamento = medicamento.IdMedicamento })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');" class="buy-btn"><i class="bi bi-trash-fill"></i></a></div>
                       </div>
                   </div>
               </div>
           </div>
                    }

                }
                else
                {
            <div class="alert alert-danger" role="alert">Ocurrio un error al realizar la consulta </div>
        }
    </div>
</div>

